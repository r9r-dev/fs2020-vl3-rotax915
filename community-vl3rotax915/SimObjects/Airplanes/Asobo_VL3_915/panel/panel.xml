		  <Annunciations>
    
    <Annunciation>
      <Type>Warning</Type>
      <Text>OIL PRESSURE</Text>
      <Condition>
		<LowerEqual>
			<Simvar name="GENERAL ENG OIL PRESSURE:1" unit="psi"/>
			<Constant>20</Constant>
		</LowerEqual>
      </Condition>
    </Annunciation>
    
    <Annunciation>
      <Type>Warning</Type>
      <Text>LOW VOLTS</Text>
      <Condition>
        <LowerEqual>
          <Simvar name="ELECTRICAL MAIN BUS VOLTAGE:3" unit="volts"/>
          <Constant>25.5</Constant>
        </LowerEqual>
      </Condition>
    </Annunciation>
    
    <Annunciation>
      <Type>Warning</Type>
      <Text>HIGH VOLTS</Text>
      <Condition>
        <Greater>
          <Simvar name="ELECTRICAL MAIN BUS VOLTAGE:3" unit="volts"/>
          <Constant>32</Constant>
        </Greater>
      </Condition>
    </Annunciation>
    
	<Annunciation>
      <Type>Caution</Type>
      <Text>STBY BATT</Text>
      <Condition>
		<Timer time="10">
			<Greater>
				<Simvar name="ELECTRICAL BATTERY LOAD:2" unit="amps"/>
				<Constant>0.5</Constant>
			</Greater>
		</Timer>
      </Condition>
    </Annunciation>
	
    <Annunciation>
      <Type>Caution</Type>
      <Text>LOW VACUUM</Text>
      <Condition>
		<Lower>
			<Simvar name="SUCTION PRESSURE" unit="inch of mercury"/>
			<Constant>3.5</Constant>
		</Lower>
      </Condition>
    </Annunciation>

    <Annunciation>
      <Type>Caution</Type>
      <Text>LOW FUEL R</Text>
      <Condition>
        <Lower>
          <Simvar name="FUEL RIGHT QUANTITY" unit="gallon"/>
          <Constant>5</Constant>
        </Lower>
      </Condition>
    </Annunciation>

    <Annunciation>
      <Type>Caution</Type>
